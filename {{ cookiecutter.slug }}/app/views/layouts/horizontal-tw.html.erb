<!DOCTYPE html>
<html <%= @html_attributes || '' %> data-layout="horizontal">

<head>
  <%= render 'layouts/partials/title_meta', title: @title %>

  <%= yield :styles %>

  <%= render 'layouts/partials/head_css' %>
</head>

<body <%= @body_attributes || '' %>>

<div class="wrapper">

  <%= render 'layouts/partials/topbar' %>

  <%= render 'layouts/partials/horizontal_nav' %>

  <div class="content-page">

    <main>
      <%= yield %>
    </main>

    <%= render 'layouts/partials/footer' %>

  </div>
</div>

<%= render 'layouts/partials/customizer' %>

<%= yield :scripts %>

</body>
</html>
